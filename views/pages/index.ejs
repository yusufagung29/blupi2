<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="shortcut icon" href="Favicon/favicon.ico" type="image/x-icon">
		<meta charset="UT-8">
		<meta name="viewport" content="width-device-width, initial-scale=1.0"/>
		<title>Blupi Child Corner</title>
		<link href="css/index.css" rel="stylesheet"/>
		<script src="https://kit.fontawesome.com/dd1aed35c1.js" crossorigin="anonymous"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link href='https://css.gg/css' rel='stylesheet'>
	</head>
	<body>
		<script>
			var i = 0
		</script>
		<main>
		<div class="navcontainer">
			<span id="navstart">
				<a href="#"><img src="images/logotokotrans.png" alt="cart"></a>
				<div class="search">
					<div class="icon"></div>
					<div class="input">
						<input type="text" placeholder="Cari Barang" id="mysearch">
					</div>
				</div>
				<script>
					const icon = document.querySelector('.icon');
					const search = document.querySelector('.search');
					icon.onclick = function(){
						search.classList.toggle('active')
					}
				</script>
			</span>
			<span id="navend">
				<a href="/login" style="
				padding: 10px;
				border-radius: 20px;"><p>Login/Register</p></a>
			</span>
		</div>
		<div class="par">
		</div>
			<div class="contentflex">
				<h3 style="color: white;">Features</h3>
				<div class="flexchild responsive">
					<% model.forEach (product => { %>
						<a href="/produk/<%=product.id_p%>" style="text-decoration: none;">
							<div class="box">
							<img src="images/<%=product.gambar%>" alt="item">
						<div class="h3cont">
							<h3 class="truncate"><%=product.nama_prod%></h3>
							<h4 id="harga">Rp. </h4>
						</div>
					</div>
				</a>
				<% }) %>
			</div>	
		</main>	
		<footer>
			<div class="footercontainer">
			<h4>Follow us</h4>
			<div class="footerfelx"></div>
				<a href="#"><span class="circlef"><div class="gg-instagram"></div></span></a>
				<a href="#"><span class="circlef"><div class="gg-facebook"></div></span></a>
				<a href="#"><span class="circlef"><s><div class="gg-phone"></div></s></span></a>
			</div>
		</footer>
	</div>
	</body>



	<% model.forEach (product => { %>
		<script>
			i = i+1
			var idi = document.getElementById('harga')
			idi.id = "harga" + i
		   var price = "<%= product.harga%>";
		   var price1 = parseInt(price)
		   price1 = price1.toLocaleString("id")
		   var price2 = document.getElementById('harga'+i);
		   price2.innerHTML = "Rp"+' '+price1
		   console.log(price2)
	   </script>
		<% }) %>
	
		<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js" integrity="sha512-HGOnQO9+SP1V92SrtZfjqxxtLmVzqZpjFFekvzZVWoiASSQgSr4cw9Kqd2+l8Llp4Gm0G8GIFJ4ddwZilcdb8A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>		
