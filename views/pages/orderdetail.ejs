<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="shortcut icon" href="/Favicon/favicon.ico" type="image/x-icon">
		<meta charset="UT-8">
		<meta name="viewport" content="width-device-width, initial-scale=1.0"/>
		<title>Blupi Child Corner</title>
        <link href="/css/admin.css" rel="stylesheet"/>
		<link href="/css/index.css" rel="stylesheet"/>
		<script src="https://kit.fontawesome.com/dd1aed35c1.js" crossorigin="anonymous"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link href='https://css.gg/css' rel='stylesheet'>

	</head>
	<body>
		<script>
			var i = 0
		</script>
		<main>
			<div class="navcontainer">
				<span id="navstart">
					<a href="/"><img src="/images/logotokotrans.png" alt="cart"></a>
					<div class="search">
						<div class="icon"></div>
						<div class="input">
							<input type="text" placeholder="Cari Barang" id="mysearch">
						</div>
					</div>
					<script>
						const icon = document.querySelector('.icon');
						const search = document.querySelector('.search');
						icon.onclick = function(){
							search.classList.toggle('active')
						}
					</script>
				</span>
				<span id="navend">
                    <div class="imgcontainer" style="background-image:account-img/<%=user.image%>;">
                    </div>
                    <a href="/account" name="username" style="background-color: transparent;"><p>Welcome, <b>ADMIN</b></p></a>
                    <a href="/order" style="background-color: transparent;">
                    <img src="/svg/assignment_white_24dp.svg" alt=""></a>
                    <a href="/create" style="background-color: transparent;">
                    <img src="/svg/note_add_white_24dp.svg" alt=""></a>
                    <a href="/logout" style="background-color: transparent;"><img src="
                        /svg/logout_white_24dp.svg" alt=""></a>
				</span>
			</div>
			<div style="height: 100vh; display: block;" class="contentflex">
                    <div class="admin-main-container">
                        <h3 style="color: rgb(177, 177, 177);">Nomor Pesanan <b>#<%=model[0].id_order %></b></h3>
                       <br>
                        <h4 style="color: rgb(177, 177, 177); font-weight: lighter;">Pesanan</h4> 
                        <% order.forEach (detail => { %>
                            <div class="admin-child-container">
                                <div class="admin-left-container">
                                    <img src="/images/<%=detail.gambar%>" alt="">
                                </div>
                                <div class="admin-right-container">
                                        <p class="pTitle">Nama Produk</p>
                                        <p><%=detail.produk%></p>
                                        <p class="pTitle">Jumlah</p>
                                        <p><%=detail.count%></p>
                                    </div>
                            </div>
                    <% }) %>
                    <h4 style="color: rgb(177, 177, 177); font-weight: lighter;">Informasi Tambahan</h4>    
                    <table style="text-align: center;">
                        <tr>
                            <th>Nama Consignee</th>
                            <th>Alamat Pengiriman</th>
                        </tr>
                        <tr>
                            <td><%=model[0].nama_p%></td>
                            <td><%=model[0].alamat_p%></td>
                        </tr>
                        <tr></tr>
                        <tr>
                            <th>Nomor Telepon</th>
                            <th>Status Pembayaran</th>
                        </tr>
                        <tr>
                            <td><%=model[0].no_telpon%></th>
                            <td>
                                <% if(model[0].proceed == 0) { %>
                                <form action="/payment" method="post" style="text-align: center;">
                                <input type="hidden"  id="idOrder" name="idOrder" value="<%=model[0].id_order%>">
                                <select name="payment" id="payment">
                                    <option value="Unpaid" selected="selected">Unpaid</option>
                                    <option value="paid" >Paid</option>
                                </select>
                                <% } else {%>
                                paid
                                <% } %>
                            </td>
                        </tr>
                    </table>
                    <% if(model[0].proceed == 0) { %>
                    <div style="text-align: center; margin-top: 20px;">
                        <button type="submit">Proses Pesanan</button>
                    </div>
                    <% } else {%>
                        <div style="text-align: center; margin-top: 20px;">
                            <h4>Pesanan Diproses</h4>
                        </div>
                    <% } %>
                </form>
                <a href="/order" style="text-decoration: none;">Kembali</a>
                </div>
		</main>	
	</div>
	<footer>
		<div class="footercontainer">
		<h4>Follow us</h4>
		<div class="footerfelx"></div>
			<a href="#"><span class="circlef"><div class="gg-instagram"></div></span></a>
			<a href="#"><span class="circlef"><div class="gg-facebook"></div></span></a>
			<a href="#"><span class="circlef"><s><div class="gg-phone"></div></s></span></a>
		</div>
	</footer>	
	</body>
	<style>
		.flexcont{
			margin : 10px;
		}
		.subtotal h4{
			transition: 0.2s;
		}
		.subtotal .isi2:hover h4{
			color: yellow;	
		}
		.subtotal .isi2:hover h4{
			background-color: violet;
		}
        table th{
            font-weight: 500;
            color: rgb(182, 182, 182);
        }
        table td{
            font-weight: lighter;
        }
        table tr{
            margin-top: 10px;
        }
        button{
            cursor: pointer;
            transition: 0.3s;
            width: 40%;
            background-color: #ff94f4;
            padding: 10px;
            color: white;
            border-radius: 25px;
            border: none;
        }
        button:hover{
            background-color: #90a0f8;
        }
	</style>
</html>